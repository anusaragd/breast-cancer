<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anusaratrokhum.myapplication.RegisterActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="REGISTER"
        android:textSize="30dp"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        />
    <EditText android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="USERNAME"
        android:paddingTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/username"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="PASSWORD"
        android:layout_alignParentLeft="true"
        android:id="@+id/password"
        android:layout_alignRight="@+id/username"
        android:layout_below="@+id/username"
        android:ems="10"
        android:inputType="textPassword"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="E-MAIL"
        android:layout_alignParentLeft="true"
        android:id="@+id/email"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/password"
        android:ems="10"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="NAME"
        android:layout_alignParentLeft="true"
        android:id="@+id/name"
        android:layout_alignRight="@+id/email"
        android:layout_below="@+id/email"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="LASTNAME"
        android:layout_alignParentLeft="true"
        android:id="@+id/lastname"
        android:layout_alignRight="@+id/name"
        android:layout_below="@+id/name"/>

    <Button
        android:background="#FF5252"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/datebut"
        android:layout_alignTop="@+id/monthbut"
        android:textColor="#FFFFFF"
        android:text="DATE"/>

    <Button
        android:background="#FF5252"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/yearbut"
        android:layout_alignRight="@+id/lastname"
        android:layout_below="@+id/lastname"
        android:textColor="#FFFFFF"
        android:text="YEAR"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="#FF5252"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/monthbut"
        android:textColor="#FFFFFF"
        android:text="MONTH"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView2"/>

    <EditText
        android:background="#EF5350"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/oldnum"
        android:layout_below="@+id/monthbut"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/monthbut"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/textView2"
        android:layout_below="@+id/yearbut"
        android:text="AGE"
        android:layout_marginTop="30dp"
        android:layout_marginRight="170dp"
        android:textSize="25dp"/>

    <Button
        android:background="#FF5252"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/subbutt"
        android:textColor="#FFFFFF"
        android:text="SUBMIT"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:background="#FF5252"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:layout_alignParentRight="true"
        android:id="@+id/canbutt"
        android:textColor="#FFFFFF"
        android:text="CANCLE"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/subbutt"/>
</RelativeLayout>
